{
  "name": "naked-react",
  "version": "1.0.0",
  "description": "React.js boilerplate to bootstrap a general purpose PWA.",
  "scripts": {
    "postinstall": "cd client && npm i",
    "start:server": "cross-env NODE_ENV=production PORT=80 node server",
    "start:client": "cd client && npm run build",
    "start": "npm run start:client && npm run start:server",
    "dev:server": "nodemon server",
    "dev:client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run dev:client\" \"npm run dev:server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naranjja/naked-react.git"
  },
  "keywords": [
    "reactjs",
    "express",
    "mongodb",
    "semanticui",
    "highcharts",
    "datatables",
    "passport"
  ],
  "author": "Jose Naranjo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/naranjja/naked-react/issues"
  },
  "homepage": "https://github.com/naranjja/naked-react#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-ensure-login": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "formidable": "^1.1.1",
    "mongodb": "^3.0.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "nodemon": "^1.15.0"
  }
}
